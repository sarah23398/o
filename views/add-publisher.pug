body
  
  include owner-header.pug

  p
  .container
    .row
      .col-sm
        h4 Add a Publisher
        form
          .form-group
            label(for='publisherName') Name
            input#publisherName.form-control(name='title' aria-describedby='emailHelp' placeholder='Enter name')
          .form-group
            label(for='publisherEmail') Email
            input#publisherEmail.form-control(name='title' aria-describedby='emailHelp' placeholder='Enter email')
          .form-group
            label(for='publisherPhone') Phone
            input#publisherPhone.form-control(name='title' aria-describedby='emailHelp' placeholder='Enter phone')
          .form-group
            label(for='publisherAddress') Address
            input#publisherAddress.form-control(name='title' aria-describedby='emailHelp' placeholder='Enter address')
          .form-group
            label(for='publisherBankAccount') Bank account
            input#publisherBankAccount.form-control(name='title' aria-describedby='emailHelp' placeholder='Enter bank account')
          button#addPublisher.btn.btn-primary Add publisher